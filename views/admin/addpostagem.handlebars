{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>   
{{else}}
{{/each}}
<h5 class="center ">Nova postagem</h5>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <input type="text" name="titulo" placeholder="Titulo da postagem" class="form-control" required>
            <input type="text" name="slug" placeholder="Slug da postagem" class="form-control" required>
            <input type="text" name="descricao" placeholder="Descrição da postagem" class="form-control" required>
            <textarea name="conteudo" class="form-control" placeholder="Conteúdo da postagem" required></textarea>
            <h6>Selecione a categoria</h6>
            <select name="categoria" class="custom-select mt-2">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4">Criar postagem</button>
        </form>
    </div>
</div>