<main>
  {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
  {{else}}
  {{/each}}

  <div class="main-container">
    <div class="main-wrapper">
      <h2>Add Novo Post</h2>
      <form
        class="signup-form"
        action="/admin/postagens/nova"
        method="POST"
        enctype="multipart/form-data"
      >
        <input
          type="text"
          name="titulo"
          placeholder="Titulo da postagem"
          class="form-control"
          required
        />
        <textarea
          name="descricao"
          id=""
          cols="30"
          rows="10"
          placeholder="ConteÃºdo da Postagem"
          required
        ></textarea>
        <select name="categoria" class="custom-select mt-2">
          <option disabled>Selecione a categoria</option>
          {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
          {{else}}
            <option value="0">Nenhuma categoria registrada</option>
          {{/each}}
        </select>
        <input type="file" name="file" id="arquivo" required />
        <div class="btn-options">
          <a href="/admin/postagens" class="btn-readmore">
            Cancelar
          </a>
          <button type="submit" class="btn btn-success mt-4">publucar</button>
        </div>
      </form>
    </div>
  </div>
</main>