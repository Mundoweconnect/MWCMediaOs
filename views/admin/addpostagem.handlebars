<div class="container">
    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
    {{/each}}
    <h5 class="center ">Add Novo livro</h5>
    <div class="card">
        <div class="card-body">
            <form action="/admin/postagens/nova" method="POST" enctype="multipart/form-data">
                <input type="text" name="titulo" placeholder="Titulo da postagem" class="form-control" required>
                <input type="text" name="descricao" placeholder="Descrição da postagem" class="form-control" required>
                <h6>Selecione a categoria</h6>
                <select name="categoria" class="custom-select mt-2">
                    {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
                <input type="file" name="file" id="arquivo" required />
                <button type="submit" class="btn btn-success mt-4">publucar</button>
            </form>
        </div>
    </div>
</div>