<main>
  {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
  {{else}}
  {{/each}}

  <div class="main-container">
    <div class="main-wrapper">
      <h2>Editar Postagem</h2>
      <form class="signup-form" action="/admin/postagens/edit" method="POST">
        <input type="hidden" name="id" value="{{postagem._id}}" />
        <input
          type="text"
          name="titulo"
          placeholder="Titulo da postagem"
          class="form-control"
          value="{{postagem.titulo}}"
          required
        />

        <textarea
          name="descricao"
          placeholder="ConteÃºdo da Postagem"
          required
        >{{postagem.descricao}}</textarea>
        <select name="categoria" class="custom-select mt-2">
          <option disabled>Selecione a categoria</option>
          {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
          {{else}}
            <option value="0">Nenhuma categoria registrada</option>
          {{/each}}
        </select>
        <div class="btn-options">
          <a href="/admin/postagens" class="btn-readmore">
            Cancelar
          </a>
          <button type="submit" class="btn btn-success mt-4">Salvar</button>
        </div>
      </form>
    </div>
  </div>
</main>