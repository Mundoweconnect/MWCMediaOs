<div id="banner">
  <h1>&lt;MWC MIDIA/&gt;</h1>
  <h3>Nós mudamos o mundo!</h3>
</div>

<main>
  <a href="blogslist.html">
    <h2 class="section-heading">Todas Noticias</h2>
  </a>

  <section>
    {{#each postagens}}
      <div class="card">
        <div class="card-image">
          <a href="/postagem/{{slug}}">
            <img src={{url}} alt="Card Image" />
          </a>
        </div>

        <div class="card-description">
          <a href="/postagem/{{slug}}">
            <h3>{{titulo}}</h3>
          </a>
          <p>
            {{descricao}}
          </p>
          <a href="/postagem/{{slug}}" class="btn-readmore">Leia mais</a>
        </div>
      </div>
    {{else}}
      <p>Nenhum Conteúdo Disponível</p>
    {{/each}}
  </section>
</main>