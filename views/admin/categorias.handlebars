<main>
  <h2 class="page-heading">Lista de categorias</h2>
  <br />
  <a class="btn-readmore" href="/admin/categorias/add">Nova Categoria </a>
  <section>
    {{#each categorias}}
      <div class="card">
        <div class="card-description">
          <h3>{{nome}}</h3>
          <div class="card-meta">
            <small>Slug: {{slug}}</small><br />
            <a class="btn-readmore" href="/admin/categorias/edit/{{_id}}">Editar
              Categoria
            </a>
            <br />
            <form action="/admin/categorias/deletar" method="POST">
              <input type="hidden" name="id" value="{{_id}}" />
              <button type="submit" class="btn-readmore">Apagar Categoria</button>
            </form>
          </div>
        </div>
      </div>
    {{else}}
      <h4 class="mt-3">Nenhuma Categoria registrada!</h4>
    {{/each}}

  </section>
</main>