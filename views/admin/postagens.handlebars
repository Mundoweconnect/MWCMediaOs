<main>
  <h2 class="page-heading">Lista de Postagens</h2>
  <br />
  <a href="/admin/postagens/add" class="btn-readmore">Criar Conteúdo | Post</a>
  <section>
    {{#each postagens}}
      <div class="card">
        <div class="card-image">
          <a href="/postagem/{{slug}}">
            <img src="{{url}}" alt="Card Image" />
          </a>
        </div>

        <div class="card-description">
          <a href="/postagem/{{slug}}">
            <h3>{{titulo}}</h3>
          </a>
          <div class="card-meta">
            Posted by

            {{user.nome}}

            on
            {{createdAt}}
            in
            <a href="#">MWC Media</a>
          </div>
          <p>
            {{descricao}}
          </p>
          <a href="/postagem/{{slug}}" class="btn-readmore">Ler
          </a>
          <a href="/admin/postagens/edit/{{_id}}" class="btn-readmore">Editar
          </a>
          <a
            href="/admin/postagens/deletar/{{_id}}"
            class="btn-readmore"
          >Deletar</a>
        </div>
      </div>

    {{else}}
      <p>Não tem nada aqui!</p>
    {{/each}}
  </section>

</main>