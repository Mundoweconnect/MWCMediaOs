<div class="container">
    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
    {{/each}}
    <h5 class="center ">Editar Livro</h5>
    <div class="card">
        <div class="card-body">
            <form action="/admin/postagens/edit" method="POST">
                <input type="hidden" name="id" value="{{postagem._id}}">
                <input type="text" name="titulo" placeholder="Titulo da postagem" class="form-control"
                    value="{{postagem.titulo}}" required>
                <input type="text" name="descricao" placeholder="Descrição da postagem" class="form-control"
                    value="{{postagem.descricao}}" required>
                <h6>Selecione a categoria</h6>
                <select name="categoria" class="custom-select mt-2">
                    {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
                <button type="submit" class="btn btn-success mt-4">Editar</button>
            </form>
        </div>
    </div>
</div>