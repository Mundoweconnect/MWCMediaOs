<main>

  <div class="main-container">

    <div class="main-wrapper">
      <h2>Fa√ßa seu Login</h2>
      <form class="signup-form" action="/usuarios/login" method="POST">
        <input
          type="email"
          name="email"
          placeholder="E-mail"
          required
          class="form-control"
        />
        <input
          type="password"
          name="senha"
          placeholder="Senha"
          class="form-control"
        />
        <button type="submit" class="btn btn-success">Login</button>
      </form>
      {{#each erros}}
        <div class="alert alert-danger form-control mt-2">{{texto}}</div>
      {{else}}
      {{/each}}
    </div>

  </div>

</main>